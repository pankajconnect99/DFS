  poll: 0
  register: rman_job
  delegate_to: "{{ standby_host }}"

- name: Wait for RMAN duplicate to finish with progress updates
  async_status:
    jid: "{{ rman_job.ansible_job_id }}"
  register: job_result
  until: job_result.finished
  retries: "{{ (rman_duplicate_timeout // progress_update_interval) | int }}"
  delay: "{{ progress_update_interval }}"
  delegate_to: "{{ standby_host }}"
  notify:
    - send_rman_progress_email

- name: Send email notification for RMAN duplicate
  mail:
    host: "{{ smtp_host }}"
    port: "{{ smtp_port }}"
    username: "{{ smtp_user }}"
    password: "{{ smtp_password }}"
    from: "{{ email_from }}"
    to: "{{ email_to }}"
    subject: "[Standby Setup] RMAN Duplicate â€“ {{ 'âœ… Success' if job_result.finished else 'âŒ Failure' }}"
    body: |
      Timestamp: "{{ lookup('pipe', 'date +%Y-%m-%d_%H:%M:%S') }}"
      Status: {{ 'SUCCESS' if job_result.finished else 'FAILED' }}
      Details:
      {{ job_result }}
  delegate_to: localhost

# handlers/main.yml
- name: send_rman_progress_email
  mail:
    host: "{{ smtp_host }}"
    port: "{{ smtp_port }}"
    username: "{{ smtp_user }}"
    password: "{{ smtp_password }}"
    from: "{{ email_from }}"
    to: "{{ email_to }}"
    subject: "[Standby Setup] Ongoing â€“ RMAN DUPLICATE Progress Update"
    body: |
      Current Task: RMAN DUPLICATE
      Elapsed Time: {{ ansible_date_time.iso8601 }}
      Progress: {{ job_result }}
  delegate_to: localhost
```

